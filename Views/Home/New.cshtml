@model Post

<form asp-action="Create" asp-controller="Home" method="POST">

<div class="form-group">
    <label asp-for="Chef"></label>
    <input asp-for="Chef" class="form-control">
    <span class="text-danger" asp-validation-for="Chef"></span>
</div>

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
    <span class="text-danger" asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label asp-for="Calories"></label>
    <input asp-for="Calories" class="form-control">
    <span class="text-danger" asp-validation-for="Calories"></span>
</div>

<div class="form-group">
    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness" class="form-control">
        <option value="">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <span class="text-danger" asp-validation-for="Tastiness"></span>

    <div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span class="text-danger" asp-validation-for="Description"></span>
    </div>

</div>

<div class="col text-center">
    <button class="btn btn-success">Add Dish</button>
</div>

</form>